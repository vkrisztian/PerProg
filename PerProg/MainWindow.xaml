<Window x:Class="PerProg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerProg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
         <Image>
            <Image.Resources>
            <local:Converter x:Key="PalyaConverter"/>
        </Image.Resources>
        <Image.Source>
            <DrawingImage>
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing Brush="White"  Geometry="{Binding Tabla.Table, Converter={StaticResource PalyaConverter}}" >
                            <GeometryDrawing.Pen>
                                <Pen Thickness="1" Brush="Black" ></Pen>
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
        </Image.Source>
    </Image>
</Window>
